<!-- End Inner Content -->


  <script>

    var menuHidden = false;

    $('#menuToggler').on('click', function(){
        toggleMenu();
    })


    function hideMenu(){
        $('#sideMenu').transition({ x: '-130px',  scale: 1, opacity: 0});
        $('#topMenu').transition({ y: '-40px'});
        $('#content').transition({ x: '-110px', scale: 1, opacity: 1});
        $('#menuToggler').addClass('textglow');
        menuHidden = true;
    }

    function showMenu(){
        $('#content').transition({ x: '0px', scale: 1, opacity:0.5 });
        $('#sideMenu').transition({ x: '0px',scale:1, opacity:1 }); 
        $('#topMenu').transition({ y: '0px'});
        $('#menuToggler').removeClass('textglow');
        menuHidden = false;
    }

    function toggleMenu(){
        if ( menuHidden ){
            showMenu();
        }
        else {
            hideMenu();
        }
    }


  </script>

  
</body>
